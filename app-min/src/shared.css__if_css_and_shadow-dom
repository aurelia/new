  padding: 16px;
  margin: 8px 0;
  border-radius: 8px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.shared-shadow-text {
  font-family: 'Arial', sans-serif;
  font-size: 14px;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

/* This demonstrates that shared styles work across all shadow DOM components */
.shadow-demo-border {
  border: 2px solid #ff6b6b;
