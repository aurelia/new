/* Shared SCSS styles for Shadow DOM components */

/* These styles are loaded as strings and applied to all Shadow DOM components */

$shadow-primary: #667eea;
$shadow-secondary: #764ba2;
$shadow-accent: #ff6b6b;
$shadow-radius: 8px;

.shared-shadow-style {
  padding: 16px;
  margin: 8px 0;
  border-radius: $shadow-radius;
  background: linear-gradient(135deg, $shadow-primary 0%, $shadow-secondary 100%);
  color: white;
  font-weight: 500;
  box-shadow: 0 4px 6px rgb(0 0 0 / 10%);
}

.shared-shadow-text {
  font-family: Arial, sans-serif;
  font-size: 14px;
  text-align: center;
  text-shadow: 0 1px 2px rgb(0 0 0 / 20%);
}

/* This demonstrates that shared styles work across all shadow DOM components */
.shadow-demo-border {
  border: 2px solid $shadow-accent;
  border-radius: calc(#{$shadow-radius} / 2);
  padding: 8px;
} 