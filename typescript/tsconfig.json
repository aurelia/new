{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // @if !jest
    "module": "esnext",
    // @endif
    "moduleResolution": "node",
    "skipLibCheck": true,
    // @if browser-evergreen
    "target": "ES2017",
    // @endif
    // @if !browser-evergreen
    "target": "ES5",
    // @endif
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    // @if jest || jasmine || mocha || tape
    "test",
    // @endif
    "src"
  ]
}
