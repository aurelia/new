{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // @if browserify || jest || ava
    "module": "commonjs",
    // @endif
    // @if !browserify && !jest && !ava
    "module": "esnext",
    // @endif
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    // @if browser-evergreen
    "target": "ES2017",
    // @endif
    // @if !browser-evergreen
    "target": "ES5",
    // @endif
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    // @if jest || jasmine || mocha || tape || ava
    "test",
    // @endif
    "src"
  ]
}
